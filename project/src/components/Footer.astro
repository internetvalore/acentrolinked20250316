---
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <img src="https://www.acentroservices.it/wp-content/uploads/2024/04/Logo-AcentroServices.gif" alt="Acentro Services Logo">
        <p>{t('footer.solutions')}</p>
      </div>
      
      <div class="footer-links">
        <h3>{t('footer.quickLinks')}</h3>
        <ul>
          <li><a href={lang === 'it' ? '/' : '/en'}>{t('nav.home')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}#servizi`}>{t('nav.services')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}chi-siamo`}>{t('nav.about')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}perche-noi`}>{t('nav.why')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}contatti`}>{t('nav.contact')}</a></li>
        </ul>
      </div>
      
      <div class="footer-services">
        <h3>{t('footer.ourServices')}</h3>
        <ul>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}pratiche-camera-commercio`}>{t('services.chamber')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}pratiche-agenzia-entrate`}>{t('services.revenue')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}pratiche-inps-inail`}>{t('services.inps')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}servizi-digitali`}>{t('services.digital')}</a></li>
          <li><a href={`/${lang === 'it' ? '' : 'en/'}digipram`}>{t('services.digipram')}</a></li>
        </ul>
      </div>
      
      <div class="footer-contact">
        <h3>{t('footer.contact')}</h3>
        <p><strong>{t('footer.address')}:</strong> Viale C. Espinasse 67, 20156 MILANO (MI)</p>
        <p><strong>{t('footer.phone')}:</strong> <a href="tel:0238003661">02.38003661</a></p>
        <p><strong>{t('footer.email')}:</strong> <a href="mailto:acentroservices@acentroservices.it">acentroservices@acentroservices.it</a></p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="copyright">
        &copy; {currentYear} Acentro Services. {t('footer.rights')}
      </div>
      <div class="legal-links">
        <a href="https://www.iubenda.com/privacy-policy/23305698" target="_blank" rel="noopener noreferrer">{t('footer.privacy')}</a>
        <a href="https://www.iubenda.com/privacy-policy/23305698/cookie-policy" target="_blank" rel="noopener noreferrer">{t('footer.cookies')}</a>
        <a href="#">{t('footer.terms')}</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--dark-bg);
    color: white;
    padding: 4rem 0 2rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .footer-logo img {
    height: 50px;
    margin-bottom: 1rem;
    background-color: white;
    padding: 5px;
    border-radius: 4px;
  }
  
  .footer-logo p {
    color: #ccc;
    font-size: 0.9rem;
  }
  
  .footer h3 {
    color: white;
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
  }
  
  .footer ul {
    list-style: none;
  }
  
  .footer ul li {
    margin-bottom: 0.75rem;
  }
  
  .footer a {
    color: #ccc;
    transition: color 0.3s ease;
  }
  
  .footer a:hover {
    color: var(--accent-color);
  }
  
  .footer-contact p {
    margin-bottom: 0.75rem;
    color: #ccc;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .copyright {
    color: #ccc;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  .legal-links {
    display: flex;
    gap: 1.5rem;
  }
  
  .legal-links a {
    font-size: 0.9rem;
  }
  
  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 576px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .legal-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
